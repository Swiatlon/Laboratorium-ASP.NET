@model List<Contact>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<a asp-controller="Contact" asp-action="Create">Create Contact</a>
<table class="table">
    <thead>
        <tr>
            <th>Imie</th>
            <th>Email</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in @Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>
                    <a asp-controller="Contact" asp-action="Update" asp-route-id=@item.Id>Edytuj</a>
                    <a asp-controller="Contact" asp-action="Delete" asp-route-id=@item.Id>Usun</a>
                    <a asp-controller="Contact" asp-action="Details" asp-route-id=@item.Id>Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>